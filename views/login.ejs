<!DOCTYPE html>

<html lang="en">

  <head>

    <title>Resource - Login</title>

    <!-- Normalize -->
    <link rel="stylesheet" type="text/css" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" type="text/css" href="/vendor/border-box.css" />
    <!-- Fonts -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Montserrat:ital,wght@0,400;0,500;0,600;0,700;0,800;1,500;1,600;1,700&display=swap" />
    <!-- Fomantic-UI -->
    <link rel="stylesheet" type="text/css" href="/vendor/semantic/semantic.min.css" />
    <!-- App styles -->
    <link rel="stylesheet" type="text/css" href="/styles/base.css" />
    <link rel="stylesheet" type="text/css" href="/styles/nav.css" />
    <link rel="stylesheet" type="text/css" href="/styles/login-page.css" />

    <!-- External scripts -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/vendor/semantic/semantic.min.js"></script>
    <!-- App scripts -->
    <script type="text/javascript" src="/scripts/app.js"></script>

  </head>

  <body>
    <%- include("partials/_nav") %>

  </head>
  <body>
  
  <div class="ui middle aligned center aligned grid custom-login-box">
    <div class="column">
      <h2 class="ui header">
        <div class="content">
          Log-in to your account
        </div>
      </h2>
      <form class="ui large form">
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <input type="text" name="email" placeholder="E-mail" required="required">
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <input type="password" name="password" placeholder="Password" required="required">
            </div>
          </div>
          <button class="ui fluid large pink submit button custom-submit-btn">Login</button>
        </div>
  

      </form>
  
      <div class="ui message">
        New to us? <a href="#">Sign Up</a>
      </div>
    </div>
  </div>
  
  </body>
  
  </body>

</html>
