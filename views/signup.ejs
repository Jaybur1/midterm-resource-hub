<!DOCTYPE html>

<html lang="en">
  <head>
    <title><%= app.name %> - Sign up</title>

    <%- include("partials/_head") %>

    <link rel="stylesheet" type="text/css" href="/styles/login-page.css" />
  </head>

  <body>
    <%- include("partials/_nav") %>
    <div class="custom-login">
    </div>
    <div class="ui middle aligned center aligned grid custom-login-box">
      <div class="column">
        <h2 class="ui header">
          <div class="content">
            Create new account
          </div>
        </h2>
        <form class="signup-form ui large form">
          <div class="ui segment">
            <div class="field">
              <div class="ui left icon input">
                <i class="user icon"></i>
                <input
                  class="login-input signup-name"
                  type="text"
                  name="name"
                  placeholder="Your cool name"
                  required="required"
                />
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="envelope outline icon"></i>
                <input
                  class="login-input signup-email"
                  type="text"
                  name="email"
                  placeholder="E-mail"
                  required="required"
                />
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="lock icon"></i>
                <input
                  class="login-input signup-password"
                  type="password"
                  name="password"
                  placeholder="Password"
                  required="required"
                />
              </div>
            </div>
            <button
              class="ui fluid large pink button custom-submit-btn"
              type="submit"
            >
              Create
            </button>
          </div>
          <div class="ui error message error-message"></div>
        </form>
        <div class="ui custom-link">
          Already have an account? <a href="/users/login">Log in</a>
        </div>
      </div>
    </div>
    <%- include('partials/_footer.ejs') %> 
  </body>
</html>
